@namespace leiloes_monet.Models
@model Utilizador

<html>
<head>
	<link rel="stylesheet" href="../../css/homepage.css">
	<meta charset="utf-8">
	<title>Form-v10 by Colorlib</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="../../css/montserrat-font.css">
	<link rel="stylesheet" type="text/css" href="../../fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="../../css/formStyle.css" />
</head>

<body class="form-v10">
	<div class="page-content">
		<div class="form-v10-content">
			<form method="post" asp-controller="MeuPerfil" asp-action="Update" class="form-detail">
				<div class="form-left">
					<h2>Informação geral</h2>
					<div class="form-row">
						<input type="text" class="input-text" placeholder="e-Mail" asp-for="email" required readonly>
						<span asp-validation-for="email" class="text-danger"></span>
					</div>

					<div class="form-row">
						<input type="text" placeholder="Username" asp-for="nome" required>
					</div>
					<div class="form-row">
						<input type="date" placeholder="Data nascimento" asp-for="data_nascimento" required>
						<span asp-validation-for="data_nascimento" class="text-danger"></span>
					</div>

					<div class="form-row">
						<input type="text" placeholder="nif" asp-for="nif" required>
					</div>
					<div class="form-row">
						<input type="password" class="password" placeholder="password" asp-for="password" required>
					</div>

				</div>
				<div class="form-right">
					<h2>Morada</h2>
					<div class="form-row">
						<input type="text" placeholder="Cidade" asp-for="morada.cidade" required>
					</div>
					<div class="form-group">
						<div class="form-row form-row-1">
							<input type="text" placeholder="Código-postal" asp-for="morada.cod_postal" required>
						</div>
					</div>
					<div class="form-row">
						<input type="text" placeholder="Pais" asp-for="morada.pais" required>
					</div>
					<div class="form-row">
						<input type="text" placeholder="Rua" asp-for="morada.rua" required>
					</div>
					<div class="form-row-last">
						<input type="submit" class="register" value="Editar">
					</div>
				</div>
			</form>
		</div>
	</div>

	<a asp-controller="HomeLogged" asp-action="Index" class="website-title">Leilões Monet</a>
	<div class="button-container">

		<a asp-controller="VerLeiloes" asp-action="MeusLeiloes">Meus leilões</a>
		<a asp-controller="VerLeiloes" asp-action="LeiloesLicitados">Leilões licitados</a>

		<a asp-controller="MeuPerfil" asp-action="Meuperfil" class="quem-somos-button">Meu perfil</a>
		<a asp-controller="HomeLogged" asp-action="Leiloes" class="quem-somos-button">Leiloes</a>
		<a asp-controller="Home" asp-action="QuemSomos" class="quem-somos-button">Quem somos</a>
		<a asp-controller="Home" asp-action="QuemSomos" class="quem-somos-button">Pagamentos</a>

		<a asp-controller="HomeLogged" asp-action="Logout">Log out</a>

		
	</div>

	
		
		
	
</body>

</html>










