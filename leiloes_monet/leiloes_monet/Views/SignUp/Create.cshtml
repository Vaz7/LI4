@namespace leiloes_monet.Models
@model Utilizador

<html>
<head>
    <link rel="stylesheet" href="../../css/homepage.css">
    <meta charset="utf-8">
    <title>Form-v10 by Colorlib</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
	<link rel="stylesheet" type="text/css" href="../../css/montserrat-font.css">
	<link rel="stylesheet" type="text/css" href="../../fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
    <!-- Main Style Css -->
	<link rel="stylesheet" href="../../css/formStyle.css" />
</head>

<body class="form-v10">
	<div class="page-content">
		<div class="form-v10-content">
			<form method="post" asp-controller="SignUp" asp-action="Create" class="form-detail">
				<div class="form-left">
					<h2>Informação geral</h2>
					<div class="form-row">
						<input type="text" class="input-text" placeholder="E-mail" asp-for="email" minlength="1" maxlength="99" required>
						<span asp-validation-for="email" class="text-danger"></span>
					</div>
					
					<div class="form-row">
						<input type="text" placeholder="Username" asp-for="nome" required>
					</div>
					<div class="form-row">
						<input type="date" placeholder="Data nascimento" asp-for="data_nascimento" required>
						<span asp-validation-for="data_nascimento" class="text-danger"></span>
					</div>
					
					<div class="form-row">
						<input type="text" placeholder="nif" asp-for="nif" pattern="\d{9}" title="NIF deve ter 9 dígitos" required>
						<span asp-validation-for="nif" class="text-danger"></span>
					</div>
					<div class="form-row">
						<input type="password" class="password" placeholder="password" asp-for="password" minlength="8" maxlength="20" required>
						<span asp-validation-for="password" class="text-danger"></span>
					</div>

				</div>
				<div class="form-right">
					<h2>Morada</h2>
					<div class="form-row">
						<input type="text" placeholder="Cidade" asp-for="morada.cidade" minlength="1" maxlength="49" required>
					</div>
					<div class="form-group">
						<div class="form-row">
							<input type="text" placeholder="Código-postal (XXXX-XXX)" asp-for="morada.cod_postal" pattern="\d{4}-\d{3}" title="Código-postal deve estar no formato XXXX-XXX" required>
							<span asp-validation-for="morada.cod_postal" class="text-danger"></span>
						</div>
					</div>
					<div class="form-row">
						<input type="text" placeholder="Pais" asp-for="morada.pais" minlength="1" maxlength="44" required>
					</div>
					<div class="form-row">
						<input type="text" placeholder="Rua" asp-for="morada.rua" minlength="1" maxlength="99" required>
					</div>
					<div class="form-row-last">
						<input type="submit" class="register" value="Registar">
					</div>
				</div>
			</form>
		</div>
	</div>

	<a asp-controller="Home" asp-action="Index" class="website-title">Leilões Monet</a>

	<div class="button-container">
		<a asp-controller="Home" asp-action="QuemSomos" class="quem-somos-button">Quem somos</a>
		<a asp-controller="LogIn" asp-action="Login">Sign In</a>
		<a asp-controller="SignUp" asp-action="Create">Sign Up</a>
	</div>
</body>

</html>










