@page "/signup"

<style>
    /*Buttons*/
    .button-container {
        position: absolute;
        top: 10px;
        right: 10px;
        display: flex;
        flex-direction: row;
    }

        .button-container button {
            margin-right: 10px; /* Add some spacing between buttons */
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: #7A007C;
            color: #ffffff;
            border: none;
            border-radius: 5px;
        }

    .website-title {
        position: absolute;
        top: 10px;
        left: 15px;
        font-size: 20px;
        font-weight: bold;
        color: #7A007C;
        cursor: pointer; /* Add cursor pointer on hover */
        background: none;
        border: none;
        padding: 0;
        margin: 0;
        text-decoration: none;
        font-family: inherit;
    }

    .quem-somos-button {
        background-color: #ffffff !important; /* Change this color to your desired background color */
        color: #000000 !important;
    }

</style>

<style>
    .signup-form {
        padding-top: 200px;
        max-width: 400px; /* Adjust the maximum width as needed */
        margin: 0 auto; /* Center the form horizontally */
        
    }

        .signup-form label {
            display: block; /* Make labels block elements for better spacing */
            margin-bottom: 8px; /* Adjust the margin between labels and input fields */
        }

        .signup-form input,
        .signup-form button {
            width: 100%; /* Make inputs and button full-width */
            margin-bottom: 16px; /* Adjust the margin between input fields and button */
        }

    .signup-button {
        background-color: #4caf50; /* Green background color */
        color: white; /* White text color */
        padding: 10px 15px; /* Add padding for better button appearance */
        border: none; /* Remove border */
        border-radius: 4px; /* Optional: Add border radius for a rounded button */
        cursor: pointer; /* Add cursor pointer on hover */
    }
</style>

<div class="signup-form">
    <label for="eMail">Enter your e-mail:</label>
    <input type="text" id="eMail" @bind="eMail" />

    <label for="userName">Enter your name:</label>
    <input type="text" id="userName" @bind="userName" />

    <label for="date">Enter your birthday date:</label>
    <input type="text" id="date" @bind="date" />

    <label for="password">Enter your password:</label>
    <input type="text" id="password" @bind="password" />

    <label for="nif">Enter your nif:</label>
    <input type="text" id="nif" @bind="nif" />

    <label for="street">Enter your street:</label>
    <input type="text" id="street" @bind="street" />

    <label for="city">Enter your city:</label>
    <input type="text" id="city" @bind="city" />

    <label for="postCode">Enter your post code:</label>
    <input type="text" id="postCode" @bind="postCode" />

    <label for="country">Enter your country:</label>
    <input type="text" id="country" @bind="country" />

    <button class="signup-button" @onclick="AddUser">Add User</button>

    @if (!string.IsNullOrEmpty(message))
    {
        <p style="color: red;">@message</p>
    }
</div>

<button @onclick="GoToHomePage" class="website-title">Leilões Monet</button>

<div class="button-container">
    <button @onclick="GoToQuemSomos" class="quem-somos-button">Quem somos</button>
    <button @onclick="GoToLoginPage">Sign In</button>
    <button @onclick="GoToSignUpPage">Sign Up</button>
</div>


@code {
    private List<Utilizador> utilizadores = new List<Utilizador>(); // Initialize the list
    private string eMail;
    private string userName;
    private string date;
    private string password;
    private string nif;
    private string city;
    private string postCode;
    private string country;
    private string street;

    private string message = "";

    private void AddUser()
    {
        if (AreAllFieldsFilled())
        {
            var newUser = new Utilizador
                {
                    nome = userName,
                    email = eMail,
                    password = password
                };

            utilizadores.Add(newUser);

            // Set the message to be displayed
            message = $"User '{newUser.nome}' added successfully!";

        }
        else
        {
            message = "Please fill in all the fields."; // Set error message
        }
    }

    private bool AreAllFieldsFilled()
    {
        // Check if all fields are filled
        return !string.IsNullOrWhiteSpace(eMail)
            && !string.IsNullOrWhiteSpace(userName)
            && !string.IsNullOrWhiteSpace(date)
            && !string.IsNullOrWhiteSpace(password)
            && !string.IsNullOrWhiteSpace(nif)
            && !string.IsNullOrWhiteSpace(street)
            && !string.IsNullOrWhiteSpace(city)
            && !string.IsNullOrWhiteSpace(postCode)
            && !string.IsNullOrWhiteSpace(country);
    }

    // Inject NavigationManager
    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private void GoToLoginPage()
    {
        // Use NavigationManager to navigate to the "/login" page
        NavigationManager.NavigateTo("/login");
    }
    private void GoToSignUpPage()
    {
        // Use NavigationManager to navigate to the "/signup" page
        NavigationManager.NavigateTo("/signup");
    }
    private void GoToQuemSomos()
    {
        // Use NavigationManager to navigate to the "/quemsomos" page
        NavigationManager.NavigateTo("/quemSomos");
    }
    private void GoToHomePage()
    {
        NavigationManager.NavigateTo("/");
    }

}


